
<%= simple_form_for(@testimonial) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">

    <div class="form-group mb-4">
      <label class="mdb-main-label">Select Application Category</label>
      <%= f.input :category, label: false, input_html: { class: 'mdb-select md-form colorful-select dropdown-danger' }, collection: [['Hardship', 'Hardship'], ['Scholarship', 'Scholarship'], ['Charity', 'Charity']], required: true %>
    </div>

    <div class="field mb-4">
      <label>What did TOCA Cares help you with?</label>
      <%= f.text_field :title, class: "form-control mb-4", placeholder: "e.g. Car Repairs, Coached Youth Soccer Team, Coding Class", required: true %>
    </div>

    <div class="field mb-4">
      <label>Please describe the impact TOCA Cares has had on you.</label>
      <%= f.text_area :body, class: "form-control mb-4", placeholder: "Write your testimonial here", required: true %>
    </div>

  </div>

  <div class="form-actions text-center mb-5">
    <%= f.button :submit, class: "btn btn-primary btn-lg" %>
  </div>
<% end %>



<script>
  $(document).ready(function() {
    $('.mdb-select').materialSelect();
  });
</script>
