<main class="mt-5">
  <div class="container-fluid px-5">

    <div class="text-center">
      <h1>Questions</h1>
    </div>


    <section class="my-5">
      <h2 class="toca-uppercase color-toca-navy"><%= pluralize(@unanswered.count, "Unanswered Question") %></h2>
      <% if @unanswered.count >= 1 %>
        <div class="table-responsive">
          <table class="table table-striped">
            <thead class="bg-toca-red white-text">
              <tr>
                <th scope="col">Answered?</th>
                <th scope="col">Question</th>
                <th scope="col">Contact</th>
                <th scope="col">Delete</th>
              </tr>
            </thead>
            <tbody>
              <% @unanswered.each do |question| %>
                <tr>
                  <td>
                    <% if question.answered %>
                      <%= link_to mark_unanswered_path(question), method: :post do %>
                        <p class="h3"><i class="far fa-check-square"></i></p>
                      <% end %>
                    <% else %>
                      <%= link_to mark_answered_path(question), method: :post do %>
                        <p class="h3"><i class="far fa-square"></i></p>
                      <% end %>
                    <% end %>
                  </td>
                  <td>
                    <strong><%= question.subject %></strong>
                    <br><%= question.body %>
                  </td>
                  <td>
                    <strong><%= question.name %></strong>
                    <br><%= mail_to question.email %>
                  </td>
                  <td>
                    <%= link_to question_path(question), method: :delete do %>
                      <p class="h3"><i class="far fa-trash-alt"></i></p>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div> <!-- responsive table -->
      <% else %>
        <p>You currently have no unanswered questions!</p>
      <% end %>

    </section> <!-- admin -->





    <section class="my-5">
      <h2 class="toca-uppercase color-toca-navy"><%= pluralize(@answered.count, "Answered Question") %></h2>
      <% if @answered.count >= 1 %>
        <div class="table-responsive">
          <table class="table table-striped">
            <thead class="bg-toca-red white-text">
              <tr>
                <th scope="col">Answered?</th>
                <th scope="col">Question</th>
                <th scope="col">Contact</th>
                <th scope="col">Delete</th>
              </tr>
            </thead>
            <tbody>
              <% @answered.each do |question| %>
                <tr>
                  <td>
                    <% if question.answered %>
                      <%= link_to mark_unanswered_path(question), method: :post do %>
                        <p class="h3"><i class="far fa-check-square"></i></p>
                      <% end %>
                    <% else %>
                      <%= link_to mark_answered_path(question), method: :post do %>
                        <p class="h3"><i class="far fa-square"></i></p>
                      <% end %>
                    <% end %>
                  </td>
                  <td>
                    <strong><%= question.subject %></strong>
                    <br><%= question.body %>
                  </td>
                  <td>
                    <strong><%= question.name %></strong>
                    <br><%= mail_to question.email %>
                  </td>
                  <td>
                    <%= link_to question_path(question), method: :delete do %>
                      <p class="h3"><i class="far fa-trash-alt"></i></p>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div> <!-- responsive table -->
      <% else %>
        <p>You currently have no answered questions!</p>
      <% end %>

    </section> <!-- admin -->


  </div> <!-- container -->
</main>
