<main class="my-5">
  <div class="container">

    <h1 class="text-center">Forgot Your Password?</h1>


    <div class="row justify-content-md-center">
      <div class="text-center col-md-8 border border-light px-5 pt-5 pb-2">

        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs mt-3">
            <div class="row">
              <div class="col">
                <%= f.input :email,
                            required: true,
                            autofocus: true,
                            label: false,
                            input_html: {
                              autocomplete: "email",
                              id: "email",
                              class: "form-control",
                              placeholder: "Your Email"
                            } %>
              </div> <!-- form column -->
            </div> <!-- form row -->
          </div> <!-- form inputs -->

          <div class="form-actions">
            <%= f.button :submit, "Send me reset password instructions", class: "btn btn-primary my-4 btn-block" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>


        </div> <!-- form border column -->
      </div> <!-- row -->

  </div> <!-- container -->
</main>
